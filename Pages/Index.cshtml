@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, dear human.</thead></h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p>Fecha: @DateTime.Now.ToString("dd/MM/yyyy")</p>

    <form action = "" method = "post">
        <label for = "">Ingresar nombre:</label>
        <input type = "text" id = "nombre" name = "nombre" />
        <button type = "submit">I'm a button, Click me!</button>
    </form>

    <p>Descargando archivo: <progress value="65" max="100">65%</progress></p>

    <p>Almacenamiento usado: <meter value="30" min="0" max="100" low="10" high="80">30%</meter></p>


    <br>
    <br>

    <form action="#" method="get">
        <h2>Calculadora Completa</h2>
        <input type="text" name="display" readonly value="0">
        <br>
        <!-- Botones numéricos -->
        <button type="submit" name="num" value="1">1</button>
        <button type="submit" name="num" value="2">2</button>
        <button type="submit" name="num" value="3">3</button>
        <button type="submit" name="operator" value="+">+</button>
        <br>
        <button type="submit" name="num" value="4">4</button>
        <button type="submit" name="num" value="5">5</button>
        <button type="submit" name="num" value="6">6</button>
        <button type="submit" name="operator" value="-">-</button>
        <br>
        <button type="submit" name="num" value="7">7</button>
        <button type="submit" name="num" value="8">8</button>
        <button type="submit" name="num" value="9">9</button>
        <button type="submit" name="operator" value="*">×</button>
        <br>
        <button type="submit" name="num" value="0">0</button>
        <button type="submit" name="operator" value="/">÷</button>
        <button type="submit" name="operator" value="=">=</button>
        <button type="reset">C</button>
    </form>
    <p><small>Nota: Los resultados se verán en la URL (ej: ?num=5&operator=*)</small></p>



    @if (!string.IsNullOrEmpty(Model.NombreUsuario)) {
        <p>¡Hola, @Model.NombreUsuario!</p>
    }

</div>
